{
  "scripts": {
    "css:build": "postcss assets/css/application.css -o _site/assets/css/application.css",
    "css:watch": "postcss assets/css/application.css -o _site/assets/css/application.css --watch",
    "js:build": "esbuild assets/javascript/application.js --bundle --minify --outfile=_site/assets/javascript/application.js",
    "js:watch": "esbuild assets/javascript/application.js --bundle --outfile=_site/assets/javascript/application.js --watch",
    "build": "npm run css:build && npm run js:build"
  },
  "devDependencies": {
    "@hotwired/stimulus": "^3.2.2",
    "@tailwindcss/postcss": "^4.0.14",
    "autoprefixer": "^10.4.21",
    "esbuild": "^0.25.1",
    "postcss": "^8.5.3",
    "postcss-cli": "^11.0.1",
    "tailwindcss": "^4.0.14"
  }
}
